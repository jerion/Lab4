<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/titlea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="飲料:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/drink_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="品名"
        app:layout_constraintStart_toStartOf="@+id/titlea"
        app:layout_constraintTop_toBottomOf="@+id/titlea" />

    <TextView
        android:id="@+id/titleb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="甜度:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/drink"
        app:layout_constraintTop_toBottomOf="@+id/drink" />

    <RadioGroup
        android:id="@+id/sug"
        android:layout_width="91dp"
        android:layout_height="162dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/titleb"
        app:layout_constraintTop_toBottomOf="@+id/titleb">

        <RadioButton
            android:id="@+id/n_sug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="無糖" />

        <RadioButton
            android:id="@+id/s_sug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微糖" />

        <RadioButton
            android:id="@+id/h_sug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="半糖" />

        <RadioButton
            android:id="@+id/l_sug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="少糖" />

        <RadioButton
            android:id="@+id/f_sug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全糖" />
    </RadioGroup>

    <TextView
        android:id="@+id/titlec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="冰塊:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/titleb"
        app:layout_constraintTop_toBottomOf="@+id/sug" />

    <RadioGroup
        android:id="@+id/iceg"
        android:layout_width="74dp"
        android:layout_height="111dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/titlec"
        app:layout_constraintTop_toBottomOf="@+id/titlec">

        <RadioButton
            android:id="@+id/s_ice"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微冰" />

        <RadioButton
            android:id="@+id/h_ice"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="少冰" />

        <RadioButton
            android:id="@+id/f_ice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="正常冰" />
    </RadioGroup>

    <Button
        android:id="@+id/seet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="送出"
        app:layout_constraintStart_toStartOf="@+id/titlec"
        app:layout_constraintTop_toBottomOf="@+id/iceg" />
</android.support.constraint.ConstraintLayout>